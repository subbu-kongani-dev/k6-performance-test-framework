{
  "name": "k6-performance-test-framework",
  "version": "1.0.0",
  "description": "E2E Performance Testing Framework with k6, TypeScript, and Jest",
  "scripts": {
    "build": "webpack",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:smoke": "npm run build && k6 run dist/smoke-test.js",
    "test:load": "npm run build && k6 run dist/load-test.js",
    "test:stress": "npm run build && k6 run dist/stress-test.js",
    "test:all": "npm run test:unit && npm run test:smoke",
    "test:all:full": "npm run test:unit && npm run test:smoke && npm run test:load && npm run test:stress",
    "test:performance": "npm run test:smoke && npm run test:load && npm run test:stress",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist coverage results",
    "validate": "npm run lint && npm run format:check && npm run test:unit",
    "prepare": "npm run build"
  },
  "keywords": [
    "k6",
    "performance-testing",
    "typescript",
    "jest"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/k6": "^0.52.0",
    "clean-webpack-plugin": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/utils/**/*.ts",
      "src/helpers/**/*.ts",
      "src/config/**/*.ts",
      "src/fixtures/**/*.ts",
      "src/constants/**/*.ts",
      "!src/tests/**",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true
  }
}